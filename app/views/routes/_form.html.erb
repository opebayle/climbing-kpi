<%= form_for(@route) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :level %><br>
    <%= select("post", "level_id", Level.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
  </div>

  <div class="field">
    <%= f.label :grade %><br>
    <%= select("post", "grade_id", Grade.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
  </div>

  <div class="field">
    <%= f.label :posx %><br>
    <%= f.number_field :posx %>
  </div>
  <div class="field">
    <%= f.label :posy %><br>
    <%= f.number_field :posy %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
